<form class="comment-form">
  <h3>Leave A Comment</h3>

  <input
    class="form-input"
    type="text"
    placeholder="comment"
    id="comment-input"
  />
  <input type="hidden" id="user_id" value="{{this.[0].user_id}}" />
  <input type="hidden" id="asteroid_id" value="{{this.[0].asteroid_id}}" />
  <button class="btn" type="submit">submit</button>
</form>

<div>
  {{#each this}}
    <div class="comment-container">
      <p class="comment-header">Posted by
        {{user.username}}
        on
        {{new_date createdAt}}</p>
      <p class="comment-content">{{this.content}}</p>
    </div>
  {{/each}}
</div>